case $1 in
    "XMR") ./cpu -o ${xmrPool} -u ${xmrWallet}.${ID} -t $2 -k --tls ;;

    "AVN") ./avn --algorithm minotaurx --pool ${avnPool} --wallet ${avnWallet} --password c=AVN,mc=AVN,ID=${ID} --cpu-threads $2 --disable-gpu ;;

